
@page 
@model Personal_study.Pages.Scriptures.IndexModel


@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<form>
    <p>
        Scripture Reference: <input type="text" asp-for="SearchString" />
        <button type="submit" class="btn btn-outline-success" value="Filter">Filter</button>
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.NameSort">
                    @Html.DisplayNameFor(model => model.Scripture_entry[0].scripture_reference)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Scripture_entry[0].scripture_text)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.Scripture_entry[0].scripture_note)
                
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.DateSort">
                    @Html.DisplayNameFor(model => model.Scripture_entry[0].scripture_date)
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Scripture_entry) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.scripture_reference)
            </td>
            <td>
                    <a asp-page="./Details" class="btn btn-link" asp-route-id="@item.ID">Scripture Text</a>
            </td>
            <td>
                    <a asp-page="./Details" class="btn btn-link" asp-route-id="@item.ID">Note Details</a>
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.scripture_date)
			</td>
			<td>
				<button type="button" class="btn btn-success"> <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a></button> |
                <button type="button" class="btn btn-warning"> <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a></button>
			</td>
		</tr>
		}
	
    </tbody>
</table>
